#include <stdio.h>
int main(){
	int a, b;
	printf("Please input two numbers:  ",a,b);
	scanf("%d %d",&a,&b);
	if (a>=b){
		printf("%d is larger than %d",a,b);
	}
	else if (a<b){
		printf("%d is smaller than %d",a,b);
	}
	return 0;
}



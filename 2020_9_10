}

 # include <stdio.h>
int main(){
	double doubleFloatNumber;
	printf("Please input a double floating number:");
	scanf("%le",&doubleFloatNumber);//注意：浮点类型一定要对应上 
	printf("The double floating number is: %le", doubleFloatNumber);
	return 0;
}

# include <stdio.h>
int main(){
	int firstNumber,secondNumber,thirdNumber;
	printf("Please input the first number:");
	scanf("%d",&firstNumber);
	printf("Please input the second number:");
	scanf("%d",&secondNumber);
	printf("First Number is %d and second number is %d",firstNumber,secondNumber);
	thirdNumber = firstNumber+secondNumber;
	printf("The result of firstNumber+seconNumber is %d",thirdNumber);
	return 0;
} 

# include <stdio.h>
int main(){
	float firstNumber,secondNumber,thirdNumber;
	printf("Please input the first number:");
	scanf("%f",&firstNumber);
	printf("Please input the second number:");
	scanf("%f",&secondNumber);
	printf("First Number is %f and second number is %f",firstNumber,secondNumber);
	thirdNumber = firstNumber*secondNumber;
	printf("The result of firstNumber*seconNumber is %f",thirdNumber);
	return 0;
} 

